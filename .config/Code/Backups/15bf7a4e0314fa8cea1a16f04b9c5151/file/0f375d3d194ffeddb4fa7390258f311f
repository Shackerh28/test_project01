        <div class="container">
            <h1 class="text-center mt-5">Covid 19 Live Data in Table</h1>
            <br><br>
            <table style="width:100%" class="table table-hover">
                <thead>
                <tr>
                  <th>Total Cases</th>
                  <th>Total Deaths</th>
                  <th>Total Recovered</th>
                </tr>
            </thead>
            <tbody>
                <tr id="data">


                </tr>
            </tbody>
              </table>
              <br>
              <button onclick="refreshData()" class="btn btn-danger btn-block">
                  Refresh Data
              </button>
              
